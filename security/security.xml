<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- SmartHive Client Security Groups -->
        <record id="group_smarthive_client_user" model="res.groups">
            <field name="name">SmartHive Client User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can view SmartHive client configuration</field>
        </record>
        
        <record id="group_smarthive_client_admin" model="res.groups">
            <field name="name">SmartHive Client Admin</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('group_smarthive_client_user'))]"/>
            <field name="comment">Can manage SmartHive client configuration</field>
        </record>
        
        <!-- Allow system administrators full access -->
        <record id="rule_smarthive_config_system_admin" model="ir.rule">
            <field name="name">SmartHive Config: System Admin Full Access</field>
            <field name="model_id" ref="model_smarthive_client_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
        <!-- Allow SmartHive Client Admins full access -->
        <record id="rule_smarthive_config_client_admin" model="ir.rule">
            <field name="name">SmartHive Config: Client Admin Full Access</field>
            <field name="model_id" ref="model_smarthive_client_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_smarthive_client_admin'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
    </data>
</odoo>