<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Warning Banner Template -->
        <template id="smarthive_warning_banner" name="SmartHive Warning Banner">
            <div class="smarthive_warning_banner alert alert-warning" role="alert" style="margin: 0; border-radius: 0; text-align: center; z-index: 9999; position: relative;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <strong>
                                <i class="fa fa-exclamation-triangle"/> System Notice:
                            </strong>
                            <span t-esc="warning_message"/>
                            <t t-if="outstanding_amount and outstanding_amount > 0">
                                <br/>
                                <strong>Outstanding Amount: <span t-esc="outstanding_amount"/> </strong>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </template>
        
        <!-- Block Screen Template -->
        <template id="smarthive_block_screen" name="SmartHive Block Screen">
            <div class="smarthive_block_screen" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.8); z-index: 99999; display: flex; align-items: center; justify-content: center;">
                <div class="card" style="max-width: 500px; margin: 20px;">
                    <div class="card-header bg-danger text-white text-center">
                        <h3><i class="fa fa-lock"/> System Access Restricted</h3>
                    </div>
                    <div class="card-body text-center">
                        <p class="lead" t-esc="block_reason or 'System access has been temporarily restricted.'"/>
                        <p>Please contact your system administrator for assistance.</p>
                        <hr/>
                        <p class="text-muted small">
                            If you believe this is an error, please contact support.
                        </p>
                    </div>
                </div>
            </div>
        </template>
        
    </data>
</odoo>