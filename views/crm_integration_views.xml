<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- CRM Lead Actions -->
        <record id="action_check_smarthive_warnings_crm" model="ir.actions.server">
            <field name="name">Check System Warnings</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">action = records.action_check_smarthive_warnings()</field>
        </record>
        
        <!-- Add to CRM Lead Form View -->
        <record id="view_crm_lead_form_smarthive" model="ir.ui.view">
            <field name="name">crm.lead.form.smarthive</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_check_smarthive_warnings" 
                            string="Check System Status" 
                            type="object" 
                            class="btn-outline-info"
                            groups="base.group_user"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>