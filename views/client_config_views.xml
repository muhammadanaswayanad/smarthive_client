<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Client Configuration Tree View -->
        <record id="view_smarthive_client_config_tree" model="ir.ui.view">
            <field name="name">smarthive.client.config.tree</field>
            <field name="model">smarthive.client.config</field>
            <field name="arch" type="xml">
                <tree string="SmartHive Client Configuration" edit="false">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="server_url"/>
                    <field name="is_blocked" widget="boolean_toggle"/>
                    <field name="show_warning" widget="boolean_toggle"/>
                    <field name="payment_status" widget="badge" decoration-success="payment_status=='paid'" decoration-warning="payment_status=='pending'" decoration-danger="payment_status in ['overdue','blocked']"/>
                    <field name="last_server_contact"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        
        <!-- Client Configuration Form View -->
        <record id="view_smarthive_client_config_form" model="ir.ui.view">
            <field name="name">smarthive.client.config.form</field>
            <field name="model">smarthive.client.config</field>
            <field name="arch" type="xml">
                <form string="SmartHive Client Configuration">
                    <header>
                        <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                        <button name="send_heartbeat" string="Send Heartbeat" type="object"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="BLOCKED" bg_color="bg-danger" invisible="not is_blocked"/>
                        <widget name="web_ribbon" title="WARNING ACTIVE" bg_color="bg-warning" invisible="not show_warning"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Server Configuration">
                                <field name="server_url"/>
                                <field name="client_id"/>
                                <field name="api_key" password="True"/>
                                <field name="active"/>
                            </group>
                            <group string="Status">
                                <field name="is_blocked"/>
                                <field name="block_reason" invisible="not is_blocked"/>
                                <field name="payment_status"/>
                                <field name="outstanding_amount" invisible="not outstanding_amount"/>
                                <field name="last_server_contact"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Warning Configuration">
                                <group>
                                    <field name="show_warning"/>
                                    <field name="warning_message" invisible="not show_warning"/>
                                </group>
                            </page>
                            
                            <page string="Heartbeat Settings">
                                <group>
                                    <field name="heartbeat_interval"/>
                                    <field name="auto_report_status"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Client Configuration Search View -->
        <record id="view_smarthive_client_config_search" model="ir.ui.view">
            <field name="name">smarthive.client.config.search</field>
            <field name="model">smarthive.client.config</field>
            <field name="arch" type="xml">
                <search string="Search Client Configuration">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="server_url"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Blocked" name="blocked" domain="[('is_blocked', '=', True)]"/>
                    <filter string="Warning Active" name="warning" domain="[('show_warning', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Payment Status" name="group_payment" context="{'group_by': 'payment_status'}"/>
                        <filter string="Blocked Status" name="group_blocked" context="{'group_by': 'is_blocked'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Action for Client Configuration -->
        <record id="action_smarthive_client_config" model="ir.actions.act_window">
            <field name="name">SmartHive Configuration</field>
            <field name="res_model">smarthive.client.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure SmartHive client connection
                </p>
                <p>
                    Set up connection to your SmartHive server to enable
                    remote management and monitoring capabilities.
                </p>
            </field>
        </record>
        
    </data>
</odoo>