<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- CRM Warning Wizard Form View -->
        <record id="view_smarthive_crm_warning_wizard_form" model="ir.ui.view">
            <field name="name">smarthive.crm.warning.wizard.form</field>
            <field name="model">smarthive.crm.warning.wizard</field>
            <field name="arch" type="xml">
                <form string="System Notice">
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <i class="fa fa-exclamation-triangle text-warning"/> System Notice
                            </h3>
                        </div>
                        
                        <div class="alert alert-warning" role="alert">
                            <h4>Important System Information</h4>
                            <p><field name="warning_message" readonly="1" nolabel="1"/></p>
                            
                            <div invisible="payment_status in ['paid']">
                                <hr/>
                                <strong>Payment Status: </strong>
                                <field name="payment_status" readonly="1" nolabel="1" widget="badge" 
                                       decoration-success="payment_status=='paid'" 
                                       decoration-warning="payment_status=='pending'" 
                                       decoration-danger="payment_status in ['overdue','blocked']"/>
                                
                                <div invisible="not outstanding_amount">
                                    <br/>
                                    <strong>Outstanding Amount: </strong>
                                    <field name="outstanding_amount" readonly="1" nolabel="1" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <p class="text-muted">
                                <small>
                                    <span invisible="not local_admin_mode">
                                        This notice is managed by your local system administrator.
                                    </span>
                                    <span invisible="local_admin_mode">
                                        This notice is managed by SmartHive server.
                                    </span>
                                </small>
                            </p>
                        </div>
                        
                        <field name="local_admin_mode" invisible="1"/>
                    </sheet>
                    
                    <footer>
                        <button name="action_acknowledge" string="I Understand" type="object" class="btn-primary"/>
                        <button name="action_contact_admin" string="Contact Administrator" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Block Wizard Form View -->
        <record id="view_smarthive_block_wizard_form" model="ir.ui.view">
            <field name="name">smarthive.block.wizard.form</field>
            <field name="model">smarthive.block.wizard</field>
            <field name="arch" type="xml">
                <form string="System Access Restricted">
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <i class="fa fa-lock text-danger"/> System Access Restricted
                            </h3>
                        </div>
                        
                        <div class="alert alert-danger" role="alert">
                            <h4>Access Temporarily Blocked</h4>
                            <p><field name="block_reason" readonly="1" nolabel="1"/></p>
                            
                            <hr/>
                            <p>
                                <strong>What this means:</strong><br/>
                                • You cannot create or modify CRM leads at this time<br/>
                                • Other system functions may also be restricted<br/>
                                • This is a temporary measure
                            </p>
                            
                            <p>
                                <strong>What you can do:</strong><br/>
                                • Contact your system administrator for assistance<br/>
                                • Check back later as restrictions may be lifted<br/>
                                • Continue viewing existing data (read-only)
                            </p>
                        </div>
                        
                        <div class="text-center">
                            <p class="text-muted">
                                <small>
                                    <span invisible="not local_admin_mode">
                                        This restriction is managed by your local system administrator.
                                    </span>
                                    <span invisible="local_admin_mode">
                                        This restriction is managed by SmartHive server.
                                    </span>
                                </small>
                            </p>
                        </div>
                        
                        <field name="local_admin_mode" invisible="1"/>
                    </sheet>
                    
                    <footer>
                        <button name="action_contact_admin" string="Contact Administrator" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
    </data>
</odoo>